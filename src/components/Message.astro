---
const { isUser = false, text = "" } = Astro.props;
---

<div class={`flex ${isUser ? 'justify-end' : 'justify-start'}`}>
  <div 
    class={`max-w-[80%] p-3 rounded-lg ${isUser ? 'bg-black text-white rounded-br-none' : 'bg-gray-100 text-gray-800 rounded-bl-none'}`}
  >
    {text}
  </div>
</div>

<style>
  /* Animaci√≥n suave para nuevos mensajes */
  astro-message {
    animation: fadeIn 0.3s ease-out;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>