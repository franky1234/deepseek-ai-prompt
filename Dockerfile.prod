# Etapa de producci칩n
FROM node:18-alpine
WORKDIR /app
COPY --from=builder /app/dist /app/dist
COPY --from=builder /app/package.json .
RUN npm install --omit=dev
EXPOSE 3000
CMD ["npx", "astro", "preview"]  
